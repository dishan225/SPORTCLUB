<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_neymar"
    tools:context=".ThirdFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_neymar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neymar Jr."
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/image_neymar"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@id/text_neymar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/neymar" />

        <TextView
            android:id="@+id/text2_neymar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Neymar Jr. is a Brazilian professional footballer who currently plays for Al-Hilal and the Brazil national team. Known for his flair and dribbling, Neymar is one of the top players in the world."
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="8dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/image_neymar"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/quote_text_ronaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“A magician who dances with the ball.”"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:layout_below="@id/text2_neymar"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</FrameLayout>
